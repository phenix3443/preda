{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "configure oxd_libsec",
      "detail": "Set the oxd_libsec compile parameters",
      "type": "shell",
      "command": "cmake",
      "windows": {
        "args": ["-S", "./", "-B", "./build", "-G", "'Visual Studio 16 2019'"]
      },
      "osx": {
        "args": ["-S", "./", "-B", "./build", "-G", "Unix Makefiles"]
      },
      "linux": {
        "args": ["-S", "./", "-B", "./build", "-G", "Unix Makefiles"]
      },
      "options": {
        "cwd": "${workspaceFolder}/oxd_libsec"
      }
    },
    {
      "label": "build oxd_libsec",
      "detail": "Build oxd_libsec",
      "dependsOn": ["configure oxd_libsec"],
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "./build"],
      "options": {
        "cwd": "${workspaceFolder}/oxd_libsec"
      }
    },
    {
      "label": "clean oxd_libsec",
      "detail": "Clean oxd_libsec bulid directory",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "./build", "--target", "clean"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/oxd_libsec"
      }
    },
    {
      "label": "configure oxd_preda",
      "detail": "Set the oxd_preda compile parameters",
      "type": "shell",
      "command": "cmake",
      "windows": {
        "args": [
          "-S",
          "./",
          "-B",
          "./build",
          "-G",
          "'Visual Studio 16 2019'",
          "-DDOWNLOAD_IPP=ON",
          "-DDOWNLOAD_3RDPARTY=OFF"
        ]
      },
      "osx": {
        "args": [
          "-S",
          "./",
          "-B",
          "./build",
          "-G",
          "Unix Makefiles",
          "-DDOWNLOAD_IPP=ON",
          "-DDOWNLOAD_3RDPARTY=ON"
        ]
      },
      "linux": {
        "args": [
          "-S",
          "./",
          "-B",
          "./build",
          "-G",
          "Unix Makefiles",
          "-DDOWNLOAD_IPP=ON",
          "-DDOWNLOAD_3RDPARTY=ON"
        ]
      },
      "options": {
        "cwd": "${workspaceFolder}/oxd_preda"
      }
    },
    {
      "label": "build oxd_preda",
      "detail": "Build oxd_preda",
      "dependsOn": ["configure oxd_preda"],
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "./build", "--config", "Debug"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/oxd_preda"
      }
    },
    {
      "label": "clean oxd_preda",
      "detail": "Clean oxd_preda bulid directory",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "./build", "--target", "clean"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/oxd_preda"
      }
    },
    {
      "label": "configure all",
      "dependsOn": ["configure oxd_libsec", "configure oxd_preda"]
    },
    {
      "label": "build all",
      "detail": "Build oxd_libsec and oxd_preda",
      "dependsOn": ["configure all", "build oxd_libsec", "build oxd_preda"]
    },
    {
      "label": "clean all",
      "detail": "CMake clean bulid directory",
      "dependsOn": ["clean oxd_libsec", "clean oxd_preda"]
    }
  ]
}
